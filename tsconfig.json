// tsconfig.json (Revisi Cleanup dan Fix 'estree')
{
  "compilerOptions": {
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      // PATH ALIAS sudah benar, mengarah ke src/*
      "@/*": [
        "./src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    // Hanya sisakan satu entri untuk Next.js
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  // Tambahkan 'estree' ke exclude untuk mengatasi error estree
  "exclude": [
    "node_modules",
    "**/*.js", // Exclude file .js yang tidak perlu di-type check
    "**/*.mjs",
    "estree"
  ]
}
